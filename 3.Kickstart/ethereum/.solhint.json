{
  "extends": [
    "solhint:recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": [
      "error",
      "single"
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "compiler-version": [
      "error",
      "^0.7.3"
    ]
  }
}